<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    tools:context="com.hoque.securitypro.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:text="Choose a option:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView1_spacer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_light" />

    <Button
        android:text="Password Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1_spacer"
        android:layout_centerHorizontal="true"
        android:id="@+id/b_password_generator"
        android:background="@color/navigationBarColor"
        android:textColor="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/textView2_spacer"
        android:background="@android:color/background_light"
        android:layout_below="@+id/b_password_generator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Encrypt message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_encryption"
        android:layout_below="@+id/textView2_spacer"
        android:background="@color/navigationBarColor"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/b_password_generator"
        android:layout_alignStart="@+id/b_password_generator"
        android:layout_alignRight="@+id/b_password_generator"
        android:layout_alignEnd="@+id/b_password_generator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/textView3_spacer"
        android:background="@android:color/background_light"
        android:layout_below="@+id/b_encryption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Decrypt message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3_spacer"
        android:id="@+id/b_decryption"
        android:background="@color/navigationBarColor"
        android:layout_alignRight="@+id/b_encryption"
        android:layout_alignEnd="@+id/b_encryption"
        android:layout_alignLeft="@+id/b_encryption"
        android:layout_alignStart="@+id/b_encryption" />

    </RelativeLayout>

</ScrollView>
